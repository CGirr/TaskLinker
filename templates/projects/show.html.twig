{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - TaskLinker{% endblock %}

{% block header %}
    <div class="flex-header">
        <h1>{{ project.title }}</h1>
        <div class="user-list">
            {% for member in members %}
            <div class="avatar">{{ member.firstname|first ~ '' ~ member.lastname|first }}</div>
            {% endfor %}
        </div>
        <a class="button" href="{{ path('app_projects_edit', {id: project.id}) }}">Modifier</a>
    </div>
{% endblock %}
{% block body %}
    <div id="tasks-container">
        {% for status in allStatuses %}
        <div class="task-column">
            <h2>{{ status.getLabel() }}</h2>
            <div class="tasks-list">
                {% for task in tasksByStatus[status.value] %}
                <a class="task" href="{{ path('app_task_edit', {id: task.id}) }}">
                    <h3>{{ task.title }}</h3>
                    <p>{{ task.description ? task.description : 'Pas de description' }}</p>
                    <div class="task-infos">
                        <div class="task-deadline">
                            <i class="fa-regular fa-calendar"></i>
                            {{ task.date ? task.date|date('d M Y') : 'Pas de date de fin' }}
                        </div>
                        <div class="mini-user">
                            {{ task.member
                                ? task.member.firstName|first ~ task.member.lastName|first
                                : '-'
                            }}
                        </div>
                    </div>
                </a>
                {% else %}
                <div>
                    Aucune tâche n'a été trouvée.
                </div>
                {% endfor %}
                <a href="{{ path('app_task_new', {projectId: project.id}) }}" class="task-add">
                    + Ajouter une tâche
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
