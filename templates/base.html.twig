<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
              integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
              crossorigin="anonymous" referrerpolicy="no-referrer" />

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div id="main-container">
            <nav>
                <a href="{{ path('app_projects') }}" id="logo">
                    <img src="{{ asset('build/images/logo.png') }}" alt="Logo TaskLinker" />
                </a>
                {% set currentRoute = app.current_route %}
                <ul id="main-menu">
                    <li class="{% if currentRoute starts with 'app_projects' %}active{% endif %}">
                        <a href="{{ path('app_projects') }}">
                            <i class="fa-solid fa-list-check"></i> Projets
                        </a>
                    </li>
                    <li class="{% if currentRoute starts with 'app_employee' %}active{% endif %}">
                        <a href="{{ path('app_employee') }}">
                            <i class="fa-regular fa-user"></i> Ã‰quipe
                        </a>
                    </li>
                </ul>
            </nav>
            <main>
                <header>
                    <div id="current-user"></div>
                    <div id="title-page">
                        {% block header %}{% endblock %}
                    </div>
                </header>
                <div id="content">
                    {% block body %}{% endblock %}
                </div>
            </main>
        </div>
    </body>
</html>
